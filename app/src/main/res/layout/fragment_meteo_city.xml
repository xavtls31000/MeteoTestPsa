<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:orientation="vertical"
    tools:context=".fragments.MeteoCityFragment">

    <TextView
        android:id="@+id/frag_meteo_city"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="2dp"
        android:textStyle="bold"
        android:textSize="20sp"
        tools:text="Toulouse"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_detail_prod"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:padding="5dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <!-- Protéines -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_protein"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Protéines / 100g : ">
            </TextView>

            <TextView
                android:id="@+id/proteins"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_proteins"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Calories -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_energy"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Calories / 100g : ">
            </TextView>

            <TextView
                android:id="@+id/energy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_energy"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Graisse saturées -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_sat_fat"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Graisses saturées : ">
            </TextView>

            <TextView
                android:id="@+id/saturated_fat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_saturated_fat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Sucre -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_sugar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Sucre : ">
            </TextView>

            <TextView
                android:id="@+id/sugars_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_sugars_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Sel -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_salt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Sel : ">
            </TextView>

            <TextView
                android:id="@+id/salt_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_salt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- Fibres -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ic_fibre"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="4dp"
                android:src="@drawable/ic_nutri_score"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:layout_weight="1.5"
                android:layout_gravity="center"
                android:textSize="@dimen/sizeTxtDetailProd"
                android:text="Fibres : ">
            </TextView>

            <TextView
                android:id="@+id/fiber_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:gravity="end"
                android:padding="2dp"
                android:textColorLink="@color/colorBleuGls"
                android:textSize="@dimen/sizeTxtDetailProd" />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_fiber_value"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="italic"/>
        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:background="@color/colorLine"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <!-- EcoScore -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:layout_weight="1.5"
                    android:layout_gravity="center"
                    android:textSize="@dimen/sizeTxtDetailProd"
                    android:text="Eco-Score : "/>

                <TextView
                    android:id="@+id/txt_ecoscore_grade"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="italic"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/label_ecoscore"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="2dp"/>
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_gravity="center|start">

                <ImageView
                    android:id="@+id/btn_menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_chef"
                    android:text="@string/recette"/>

                <ImageView
                    android:id="@+id/menu_light"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="20dp"
                    android:layout_gravity="center"
                    android:src="@mipmap/ic_light"
                    android:text="@string/recette"/>
            </FrameLayout>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>

